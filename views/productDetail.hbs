<!-- Page Heading -->
<div class="container">
	<h1>Product details</h1>
	<div class="row">
		<div class="col-3">
			<img src="{{product.image}}" class="img-fluid">
			<img src="{{product.thumbnail}}" class="img-fluid">
			<h5 class="text-center text-primary mt-2">{{product.name}}</h4>
				<form method="POST" action="/productDetail/{{product._id}}?_method=DELETE"
					enctype="multipart/form-data">
					<button type="submit" class="btn btn-primary">Delete</button>
				</form>
		</div>
		<div class="col-9">
			<form method="POST" action="/productDetail/{{product._id}}?_method=PATCH" enctype="multipart/form-data">
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">Name</label>
					<div class="col-sm-9">
						<input type="text" value="{{product.name}}" class="form-control" name="name"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">Image</label>
					<div class="col-sm-9">
						<input type="text" value="{{product.image}}" class="form-control" name="image"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">Thumbnail</label>
					<div class="col-sm-9">
						<input type="text" value="{{product.thumbnail}}" class="form-control" name="thumbnail"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">Short description</label>
					<div class="col-sm-9">
						<input type="text" value="{{product.shortDescription}}" class="form-control"
							name="shortDescription"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">Category</label>
					<div class="col-sm-9">
						<input type="text" value="{{product.category}}" class="form-control" name="category"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">Sale price</label>
					<div class="col-sm-9">
						<input type="number" value="{{product.salePrice}}" class="form-control"
							name="salePrice"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">Origin price</label>
					<div class="col-sm-9">
						<input type="number" value="{{product.originalPrice}}" class="form-control"
							name="originalPrice"></input>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Save</button>
		</div>
		</form>
	</div>
</div>
