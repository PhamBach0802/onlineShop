<!-- Page Heading -->
<div class="container">
	<h1>User details</h1>
	<div class="row">
		<div class="col-3">
			{{!-- <img src="{{user.avatar}}" class="img-fluid"> --}}
			{{!-- <img src="../../upload/ltnh.png" class="img-fluid"> --}}
			<img src="../../upload/{{user.avatar}}" class="img-fluid">
			<h5 class="text-center text-primary mt-2">{{user.firstName}} {{user.lastName}}</h4>
			<form method="POST" action="/userDetail/{{user._id}}?_method=DELETE" enctype="multipart/form-data">
				<button type="submit" class="btn btn-primary">Delete</button>
			</form>
		</div>
		<div class="col-9">
		<form method="POST" action="/userDetail/{{user._id}}?_method=PATCH" enctype="multipart/form-data">
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Avatar</label>
					<div class="col-sm-10">
						<input type="file" value="../../upload/{{user.avatar}}" class="form-control" name="avatar"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">First Name</label>
					<div class="col-sm-10">
						<input type="text" value="{{user.firstName}}" class="form-control" name="firstName"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Last Name</label>
					<div class="col-sm-10">
						<input type="text" value="{{user.lastName}}" class="form-control" name="lastName"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">DOB</label>
					<div class="col-sm-10">
						<input type="date" value="{{user.dob}}" class="form-control" name="dob"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Gender</label>
					<div class="col-sm-10">
						<div class="form-check form-check-inline">
							{{#ifCond user.gender "male"}}
							<input class="form-check-input" type="radio" id="maleCheckbox" value="male" name="gender"
								checked>
							<label class="form-check-label" for="maleCheckbox">Male</label>
							{{else}}
							<input class="form-check-input" type="radio" id="maleCheckbox" value="male" name="gender">
							<label class="form-check-label" for="maleCheckbox">Male</label>
							{{/ifCond}}
						</div>
						<div class="form-check form-check-inline">
							{{#ifCond user.gender "female"}}
							<input class="form-check-input" type="radio" id="femaleCheckbox" value="female"
								name="gender" checked>
							<label class="form-check-label" for="femaleCheckbox">Female</label>
							{{else}}
							<input class="form-check-input" type="radio" id="femaleCheckbox" value="female"
								name="gender">
							<label class="form-check-label" for="femaleCheckbox">Female</label>
							{{/ifCond}}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Country</label>
					<div class="col-sm-10">
						<input type="text" value="{{user.country}}" class="form-control" name="country"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Phone Number</label>
					<div class="col-sm-10">
						<input type="text" value="{{user.phoneNumber}}" class="form-control"
							name="phoneNumber"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Zip Code</label>
					<div class="col-sm-10">
						<input type="text" value="{{user.zipcode}}" class="form-control" name="zipcode"
							value="700000"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Username</label>
					<div class="col-sm-10">
						<input type="text" value="{{user.username}}" class="form-control" name="username"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Email</label>
					<div class="col-sm-10">
						<input type="text" value="{{user.email}}" class="form-control" name="email"></input>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Email Verified</label>
					<div class="col-sm-10">
						<div class="form-check form-check-inline">
							{{#ifCond user.emailVerified "on"}}
							<input class="form-check-input" type="checkbox" id="emailVerifiedCheckbox"
								name="emailVerified" checked>
							<label class="form-check-label" for="emailVerifiedCheckbox">Verified</label>
							{{else}}
							<input class="form-check-input" type="checkbox" id="emailVerifiedCheckbox"
								name="emailVerified">
							<label class="form-check-label" for="emailVerifiedCheckbox">Verified</label>
							{{/ifCond}}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 col-form-label">Role</label>
					<div class="col-sm-10">
						<select class="custom-select" name="role">
							<option {{#ifCond user.role "user"}} selected {{/ifCond}} value="user">User</option>
							<option {{#ifCond user.role "moderator"}} selected {{/ifCond}} value="moderator">Moderator
							</option>
							<option {{#ifCond user.role "admin"}} selected {{/ifCond}} value="admin">Admin</option>
						</select>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
	</form>
	</div>
</div>
