<!-- Page Heading -->
<div class="container">
	<h1>Add new category</h1>
	<form method="POST" action="/addNewCategory" enctype="multipart/form-data">
		<div class="form-group row">
			<label class="col-sm-3 col-form-label">id</label>
			<div class="col-sm-9">
				<input type="text" value="{{category._id}}" class="form-control" name="_id"></input>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label">Name</label>
			<div class="col-sm-9">
				<input type="text" value="{{category.name}}" class="form-control" name="name"></input>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label">Icon name</label>
			<div class="col-sm-9">
				<input type="text" value="{{category.iconName}}" class="form-control" name="iconName"></input>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label">Short description</label>
			<div class="col-sm-9">
				<input type="text" value="{{category.descriptions}}" class="form-control"
					name="descriptions"></input>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Save</button>
	</form>
</div>
