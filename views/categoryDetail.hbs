<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
	<h1 class="h3 mb-0 text-gray-800">Category Id: {{category._id}}</h1>
</div>
<div class="row">
	<div class="col-3">
		<img src="{{category.image}}" class="img-fluid">
		<img src="{{category.thumbnail}}" class="img-fluid">
	</div>
	<div class="col-9">
		<div class="p-5">
			<div class="text-center">
				<h1 class="h4 text-gray-900 mb-4">Category detail</h1>
			</div>
			<form class="user">
				<div class="form-group row">
					<div class="col-sm-4 mb-3 mb-sm-0">
						<label>Name</label>
						<input type="text" class="form-control form-control-user" id="exampleFirstName"
							placeholder="First Name" value="{{category.name}}">
					</div>
					<div class="col-sm-4">
						<label>Icon Name</label>
						<input type="text" class="form-control form-control-user" id="exampleLastName"
							placeholder="Last Name" value="{{category.iconName}}">
					</div>

					<div class="col-sm-4">
						<label>Descriptions</label>
						<input type="text" class="form-control form-control-user" id="exampleLastName"
							placeholder="Last Name" value="{{category.descriptions}}">
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
